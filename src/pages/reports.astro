---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const reports = (await getCollection('reports')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const formatDate = (date) =>
  new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
  }).format(date);
---

<BaseLayout title="报告" bodyClass="report-body">
  <section class="mx-auto max-w-[720px] px-6 pb-16">
    <div class="mb-10">
      <h1 class="text-2xl font-semibold tracking-tight">报告</h1>
      <p class="mt-3 text-sm leading-7 text-zinc-500 dark:text-zinc-400">
        记录回测与运行报告，按时间更新。
      </p>
    </div>
    <ul class="space-y-3 list-none p-0">
      {reports.map((report) => (
        <li class="border-b border-zinc-200/60 pb-3 text-base font-medium text-zinc-900 dark:border-zinc-800 dark:text-zinc-100">
          <a
            href={`/reports/${report.slug}/`}
            class="report-link hover:text-zinc-700 dark:hover:text-zinc-200"
          >
            {report.data.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
